extends base

block content
    h4 Change Title of Video
    form(, method="post")
        input(name="title", placeholder="New Title", type="text", value=video.title, required)
        input(name="description", placeholder="Description", type="text", value=video.description, required, minLength=10)
        input(name="hashtags", placeholder="HashTags, separated by comma.", type="text", value=video.hashtags.join() required)
        input(value="Save", type="submit")