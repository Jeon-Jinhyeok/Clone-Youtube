extends base

block content
    if error 
       span=error 
    form(method="POST")
        label(for="name") Name
            input(name="name", id="name", required, placeholder="홍길동", type="text")

        label(for="email") Email
            input(name="email", id="email" required, placeholder="example@domain.com", type="email") 

        label(for="username") Username
            input(name="username", id="username" required, placeholder="Nickname", type="text")

        label(for="password") Password
            input(name="password", id="password" required, placeholder="10 ~ 20 characters, including at least one uppercase letter, one number, and one special character.", type="password")         

        label(for="passwordConfirm") Confirm Password
            input(name="passwordConfirm", id="passwordConfirm", required, placeholder="Confirm Password", type="password")

        label(for="location") Location
            input(name="location", type="text", placeholder="Seoul, Korea")
        input(type="submit", value="Join")
    hr
    div 
        span Already have an account? 
        a(href="/login") Log in now 